<body>
    <div class="container">
        <h1>Saldo de Moedas</h1>
        <p id="saldo">Carregando saldo...</p>
    </div>
    
    <script>
        // Função para buscar o saldo do professor
        async function buscarSaldoProfessor() {
            const response = await fetch('/api/professor/saldo'); // Rota da API
            const data = await response.json();
            document.getElementById('saldo').innerText = `Você possui ${data.saldo} moedas.`;
        }
        
        // Chama a função ao carregar a página
        window.onload = buscarSaldoProfessor;
    </script>
</body>
</html>
