<body>
    <div class="container">
        <h1>Lista de Alunos</h1>
        <table>
            <thead>
                <tr>
                    <th>Nome do Aluno</th>
                    <th>Email</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody id="alunos-tabela">
                <!-- Os alunos serão inseridos aqui -->
            </tbody>
        </table>
    </div>
    
    <script>
        // Função para listar todos os alunos
        async function listarAlunos() {
            const response = await fetch('/api/professor/alunos');  // Rota da API
            const alunos = await response.json();
            
            const tabela = document.getElementById('alunos-tabela');
            tabela.innerHTML = '';  // Limpa a tabela antes de adicionar novas linhas
            
            alunos.forEach(aluno => {
                const row = `<tr>
                    <td>${aluno.nome}</td>
                    <td>${aluno.email}</td>
                    <td><button onclick="enviarMoedas(${aluno.id})">Enviar Moedas</button></td>
                </tr>`;
                tabela.innerHTML += row;
            });
        }
        
        // Função para enviar moedas para o aluno
        async function enviarMoedas(alunoId) {
            const valor = prompt("Quantas moedas deseja enviar?");
            const motivo = prompt("Qual o motivo do envio?");
            
            if (valor && motivo) {
                const response = await fetch('/api/professor/enviar-moedas', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ alunoId, valor, motivo })
                });
                
                if (response.ok) {
                    alert("Moedas enviadas com sucesso!");
                } else {
                    alert("Erro ao enviar moedas!");
                }
            } else {
                alert("Você deve informar o valor e o motivo.");
            }
        }
        
        // Chama a função ao carregar a página
        window.onload = listarAlunos;
    </script>
</body>
</html>
